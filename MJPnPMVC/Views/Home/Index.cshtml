<style>
    #myCarousel{
        margin-top:15px;
    }
    .bottomFourLink {
        margin: 25px 0px 0px 0px;
        text-align:center;
        width:auto;
    }
    .bottomFourLink a {
        border: 1px solid #332f2f;
        text-decoration: none;
        font-weight: bold;
        padding: 10px;
        color:#000;
        width:100%;
    }
    .bottomFourLink a:hover {
        background-color: rgb(21, 58, 89);
        color: #ffffff;
    }
    .smartShopperSideLink {
        width: 100%;
        height: 58px;
        padding: 0;
        margin: 17px 0 20px 0;
        background-color: #3374b6;
        padding:15px 10px 10px 10px;
    }
    .smartShopperSideLink a{
        font-weight:bold;
        color:#ffffff;
        text-decoration:none;
        font-size:15px;
    }
    .glyphicon-credit-card{
        font-size:20px;
        margin-right:10px;
    }
    .widgetHeader {
        background-color: #52AE32;
        color: #fff;
        font-size: 18px;
        height: 50px;
        text-transform: uppercase;
        padding-left: 10px;
    }
    .widgetHeader h4{
        color: #fff;
        vertical-align:middle;
    }
    .widgetHeaderBox{
     padding-left: 10px;
     padding-right:10px;
    } 
    .btnSelectSurbub {
        background-color: #52AE32;
        color: #fff;
        padding: 6px 12px;
        font-size: 12px;
        text-align: center;
        vertical-align: middle;
        border: 1px solid transparent;
        width:100%;
    }
    .btnSelectSurbub a {
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
    }
    .btnSelectSurbub a:hover {
            text-decoration: none;
            color:#332f2f;
        } 
    .dowedeliver_select {
        height: 30px;
        padding: 0 10px 0 10px;
        font-size: 12px;
        border: 1px solid #dcddde;
        color: #575757;
        display: inline-block;
        width: 100%;
        font-family: Arial, sans-serif, Helvetica;
        background-color: #fff;
        border-radius: 0px;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        -webkit-appearance: none;
        -moz-appearance: none;
        margin-bottom: 15px;
    }
    .dowedeliver_text{
        font-weight: bold;
        font-size: 15px;
        margin: 15px 0px 15px 0px;
    }
</style>

